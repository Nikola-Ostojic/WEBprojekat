@using Kolokvijum_2.Models;
@{
    ViewBag.Title = "Registracija";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registracija</h2>

@{
    if (Session["korisnik"] == null)
    {
        //// Stop Caching in Firefox
        Response.Cache.SetValidUntilExpires(true);
        //// Stop Caching in IE
        //Response.Cache.SetCacheability(HttpCacheability.NoCache);
        //// Proxies.
        Response.Cache.SetNoStore();
        Response.Cache.SetExpires(DateTime.Now);
    }
}

   @{
       string greska = ViewBag.greska;

       if (!String.IsNullOrEmpty(greska))
       {
            <p style=" color: red ">Niste registrovani.</p><br><br>
            }
       else if (!String.IsNullOrEmpty(greska))
       {
            <p style=" color: red ">Pogresno uneti podaci.</p><br><br>
       }
    }

<form action="~/Registracija/Prijava/1" method="post">


    <label for="korisnicko ime">Korisnicko ime: </label><br>
    <input type="text" name="korisnicko ime" id="korisnicko ime"><br><br>

    <label for="lozinka">Lozinka: </label><br>
    <input type="password" name="lozinka" id="lozinka"><br><br>

    <label for="ime">Ime: </label><br>
    <input type="text" name="ime" id="ime"><br><br>

    <label for="prezime">Prezime: </label><br>
    <input type="text" name="prezime" id="prezime"><br><br>

    <label for="email">Email: </label><br>
    <input type="email" name="email" id="email"><br><br>

    <label for="datum rodjenja">Datum rodjenja: </label><br>
    <input type="date" name="datum rodjenja"><br><br>

    <label for="pol">Izaberite pol:</label><br>
    <select name="pol" id="pol">
        <option value="Muski">Muski</option>
        <option value="Zenski">Zenski</option>
    </select><br><br>

    <input type="submit" value="Potvrdi">

</form><br><br>

<text>Imate nalog? Kliknite na link ispod: <br></text>
<a href="~/Registracija/Prijava">Prijava</a>

